{% extends 'base.html.twig' %}

{% block title %}Film index{% endblock %}

{% block body %}
    <h1>Film index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdFilm</th>
                <th>Naziv</th>
                <th>ZanroviIdZanr</th>
                <th>Trajanje</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for film in films %}
            <tr>
                <td>{{ film.idFilm }}</td>
                <td>{{ film.naziv }}</td>
                <td>{{ film.zanroviIdZanr }}</td>
                <td>{{ film.trajanje }}</td>
                <td>
                    <a href="{{ path('film_show', {'idFilm': film.idFilm}) }}">show</a>
                    <a href="{{ path('film_edit', {'idFilm': film.idFilm}) }}">edit</a>
                </td>
            </tr>
